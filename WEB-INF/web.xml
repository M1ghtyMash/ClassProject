<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- Student Dashboard Servlet -->
    <servlet>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <servlet-class>servlets.StudentDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentDashboardServlet</servlet-name>
        <url-pattern>/student-dashboard</url-pattern>
    </servlet-mapping>

    <!-- Student Schedule Servlet -->
    <servlet>
        <servlet-name>StudentScheduleServlet</servlet-name>
        <servlet-class>servlets.StudentScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentScheduleServlet</servlet-name>
        <url-pattern>/student-schedule</url-pattern>
    </servlet-mapping>

    <!-- Student Grades Servlet -->
    <servlet>
        <servlet-name>StudentGradesServlet</servlet-name>
        <servlet-class>servlets.StudentGradesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentGradesServlet</servlet-name>
        <url-pattern>/student-grades</url-pattern>
    </servlet-mapping>

    <!-- Student Attendance Servlet -->
    <servlet>
        <servlet-name>StudentAttendanceServlet</servlet-name>
        <servlet-class>servlets.StudentAttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentAttendanceServlet</servlet-name>
        <url-pattern>/student-attendance</url-pattern>
    </servlet-mapping>

    <!-- Announcements Servlet -->
    <servlet>
        <servlet-name>AnnouncementsServlet</servlet-name>
        <servlet-class>servlets.AnnouncementsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnnouncementsServlet</servlet-name>
        <url-pattern>/announcements</url-pattern>
    </servlet-mapping>

    <!-- Teacher Classes Servlet -->
    <servlet>
        <servlet-name>TeacherClassesServlet</servlet-name>
        <servlet-class>servlets.TeacherClassesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherClassesServlet</servlet-name>
        <url-pattern>/teacher-classes</url-pattern>
    </servlet-mapping>

    <!-- Get Students for Subject Servlet -->
    <servlet>
        <servlet-name>GetStudentsForSubjectServlet</servlet-name>
        <servlet-class>servlets.GetStudentsForSubjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetStudentsForSubjectServlet</servlet-name>
        <url-pattern>/get-students</url-pattern>
    </servlet-mapping>

    <!-- Mark Subject Attendance Servlet -->
    <servlet>
        <servlet-name>MarkSubjectAttendanceServlet</servlet-name>
        <servlet-class>servlets.MarkSubjectAttendanceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MarkSubjectAttendanceServlet</servlet-name>
        <url-pattern>/mark-subject-attendance</url-pattern>
    </servlet-mapping>

</web-app>
